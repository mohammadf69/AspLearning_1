@model IEnumerable<AspLearning_1.Entites.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titele)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Titele
            </td>
            <td>
              @item.Level
            </td>
            <td>
             @item.FullPrice
            </td>
            <td>
                @item.Author.Name
            </td>
            <td>
                <a class="btn btn-warning"  asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a  class="btn btn-outline-primary"  asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
